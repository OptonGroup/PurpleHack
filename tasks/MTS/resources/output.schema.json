{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/Output",
  "definitions": {
    "Output": {
      "type": "object",
      "required": [
        "allocations",
        "allocation_failures",
        "migrations"
      ],
      "properties": {
        "allocations": {
          "type": "object",
          "propertyNames": {
            "$ref": "#/definitions/HostName"
          },
          "additionalProperties": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/VirtualMachineName"
            },
            "uniqueItems": true
          }
        },
        "allocation_failures": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/VirtualMachineName"
          },
          "uniqueItems": true
        },
        "migrations": {
          "type": "object",
          "propertyNames": {
            "$ref": "#/definitions/VirtualMachineName"
          },
          "additionalProperties": {
            "type": "object",
            "required": [
              "from",
              "to"
            ],
            "properties": {
              "from": {
                "$ref": "#/definitions/HostName"
              },
              "to": {
                "$ref": "#/definitions/HostName"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "patternProperties": {
        "^(\\$|x-)": {}
      },
      "additionalProperties": false
    },
    "Amount": {
      "type": "integer",
      "minimum": 1,
      "maximum": 32767
    },
    "HostName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 63
    },
    "VirtualMachineName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 63
    }
  }
}
